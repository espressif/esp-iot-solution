+    port_event_msg_t msg = {
+        .port_hdl = port_hdl,
+        .port_event = port_event,
+    };
+    BaseType_t xTaskWoken = pdFALSE;
+    xQueueSendFromISR(port_evt_queue, &msg, &xTaskWoken);
+    return (xTaskWoken == pdTRUE);
+}
