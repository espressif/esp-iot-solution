+    TEST_ASSERT_EQUAL(ESP_OK, hcd_pipe_alloc(port_hdl, &pipe_config, &pipe_hdl));
+    TEST_ASSERT_NOT_EQUAL(NULL, pipe_hdl);
+    return pipe_hdl;
+}
