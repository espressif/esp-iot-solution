+    TEST_ASSERT_NOT_EQUAL(NULL, pipe_evt_queue);
+    printf("Creating pipe\n");
+    hcd_pipe_config_t pipe_config = {
+        .callback = pipe_callback,
+        .callback_arg = (void *)pipe_evt_queue,
+        .context = (void *)pipe_evt_queue,
+        .ep_desc = ep_desc,
+        .dev_addr = dev_addr,
+        .dev_speed = dev_speed,
+    };
