# I2C devices
#
CONFIG_IOT_APDS9960_ENABLE=y
CONFIG_IOT_AT24C02_ENABLE=
CONFIG_IOT_BME280_ENABLE=
CONFIG_IOT_CH450_ENABLE=
CONFIG_IOT_IS31FL3XXX_ENABLE=
CONFIG_IOT_MCP23017_ENABLE=
CONFIG_IOT_OLED_ENABLE=y
CONFIG_IOT_BH1750_ENABLE=y
CONFIG_IOT_HTS221_ENABLE=y
CONFIG_IOT_LIS2DH12_ENABLE=
