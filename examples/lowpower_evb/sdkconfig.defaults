CONFIG_IOT_ULP_ENABLE=
CONFIG_IOT_LOWPOWER_APP_FRAMEWORK_ENABLE=y
CONFIG_IOT_BUTTON_ENABLE=y
CONFIG_IOT_DEBUG_ENABLE=
