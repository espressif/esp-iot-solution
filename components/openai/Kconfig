        bool "Enable Edit"
        default y
        help
        Enable OpenAI Edit

    config ENABLE_IMAGE_GENERATION
        bool "Enable ImageGeneration"
        default y
        help
        Enable OpenAI ImageGeneration

    config ENABLE_IMAGE_VARIATION
        bool "Enable ImageVariation"
        default y
